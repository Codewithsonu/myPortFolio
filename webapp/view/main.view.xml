<mvc:View
    controllerName="com.sap.myportfolio.controller.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:t="sap.ui.table"
    height="100%"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="false"
    >
        <!-- header part -->
        <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle1"
            >
                <expandedHeading>
                    <m:Title
                        id="_IDGenTitle1"
                        text="{portfolio&gt;/name}"
                    />
                </expandedHeading>
                <snappedHeading>
                    <m:HBox id="_IDGenHBox1">
                        <m:Avatar
                            id="_IDGenAvatar1"
                            src="../file/pic.png"
                            displaySize="XL"
                            showBorder="true"
                        />
                        <m:VBox id="_IDGenVBox1">
                            <m:Title
                                id="_IDGenTitle2"
                                text="{portfolio&gt;/name}"
                            />
                            <m:Label
                                id="_IDGenLabel1"
                                text="{portfolio&gt;/designation}"
                            />
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>
                <expandedContent>
                    <m:Label
                        id="_IDGenLabel2"
                        text="{portfolio&gt;/designation}"
                    />
                </expandedContent>
                <snappedTitleOnMobile>
                    <m:Title
                        id="_IDGenTitle3"
                        text="{portfolio&gt;/name}"
                    />
                </snappedTitleOnMobile>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <!-- end of Header part -->
        <headerContent>
            <m:FlexBox
                id="_IDGenFlexBox1"
                wrap="Wrap"
                fitContainer="true"
            >

                <m:VBox
                    id="_IDGenVBox2"
                    class="sapUiLargeMarginEnd sapUiSmallMarginBottom"
                >
                   
					 <m:Avatar
                            id="Avater2ID"
                            src="../file/pic.png"
                            displaySize="XL"
                            showBorder="true"
                        />
					 <m:Title
                        id="_IDGenTitle4"
                        text="Email"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus1"
                        text="{portfolio&gt;/email}"
                        state="Success"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox3"
                    class="sapUiLargeMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle5"
                        text="Current Company"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus2"
                        text="{portfolio&gt;/currentcompany}"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox4"
                    class="sapUiLargeMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle6"
                        text="Phone"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus3"
                        text="{portfolio&gt;/phone}"
                        state="Error"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>
            </m:FlexBox>
        </headerContent>
        <!-- start of the  table  -->
        <sections>
            <ObjectPageSection
                id="_IDGenObjectPageSection1"
                titleUppercase="false"
                title="Education Details"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection1"
                        title="Education Details"
                        showTitle="false"
                    >
                        <blocks>
                            <m:Table
                                id="_IDGenTable1"
                                class="sapUxAPObjectPageSubSectionAlignContent"
                                width="auto"
                                items="{portfolio&gt;/education}"
                            >
                                <m:columns>
                                    <m:Column id="_IDGenColumn1">
                                        <m:Text
                                            id="_IDGenText1"
                                            text="Class"
                                        />
                                    </m:Column>
                                    <m:Column
                                        id="_IDGenColumn2"
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text
                                            id="_IDGenText2"
                                            text="Percentage"
                                        />
                                    </m:Column>
                                    <m:Column
                                        id="_IDGenColumn3"
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text
                                            id="_IDGenText3"
                                            text="Year"
                                        />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem
                                        id="_IDGenColumnListItem1"
                                    >
                                        <m:Link
                                            id="_IDGenLink1"
                                            text="{portfolio&gt;type}"
                                        />
                                        <m:Text
                                            id="_IDGenText4"
                                            text="{portfolio&gt;per}"
                                        />
                                        <m:Text
                                            id="_IDGenText5"
                                            text="{portfolio&gt;year}"
                                        />
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                    <!-- end of the Table -->
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection2"
                        title="Certification Details "
                    >
                        <blocks>
                            <m:FlexBox
                                height="100px"
                                alignItems="Start"
                                justifyContent="Center"
                                id="_IDGenFlexBox2"
                                items="{portfolio&gt;/certification}"
                            >
                                <m:GenericTile
                                    id="_IDGenGenericTile1"
                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                    header="{portfolio>name}"
                                    subheader="YOC:{portfolio>year}"
                                >
                                    <m:TileContent id="_IDGenTileContent1">
                                        <m:ImageContent
                                            id="_IDGenImageContent1"
                                            src="{portfolio>icon}"
                                        />
                                    </m:TileContent>
                                </m:GenericTile>
                            </m:FlexBox>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                id="_IDGenObjectPageSection2"
                titleUppercase="true"
                title="Employment details"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection3"
                        title="Employment details"
                    >
                        <blocks>
                            <t:TreeTable
                                id="_IDGenTreeTable1"
                                rows="{path: 'portfolio>/employment', parameters: {arrayNames: ['projects']}}"
                                selectionMode="Multi"
                                enableSelectAll="false"
                                ariaLabelledBy="title"
                            >
                                <t:columns>
                                    <!-- Name -->
                                    <t:Column
                                        id="_IDGenColumn7"
                                        width="auto"
                                    >
                                        <m:Label
                                            width="auto"
                                            id="_IDGenLabel6"
                                            text="Description"
                                        />
                                        <t:template>
                                            <m:Text
                                                width="auto"
                                                id="_IDGenText6"
                                                text="{portfolio>name}"
                                                wrapping="false"
                                            />
                                        </t:template>
                                    </t:Column>
                                    <!-- end of Name -->

                                    <!-- type -->
                                    <t:Column
                                        id="_IDGenColumn5"
                                        width="auto"
                                    >
                                        <m:Label
                                            id="_IDGenLabel4"
                                            text="Type"
                                        />
                                        <t:template>
                                            <m:Text
                                                id="tyepid"
                                                width="auto"
                                                text="{portfolio>type01}"
                                                wrapping="false"
                                            />
                                        </t:template>
                                    </t:Column>
                                    <!-- End of Type  -->

                                    <!-- technology  -->

                                    <t:Column
                                        id="_IDGenColumn6"
                                        width="auto"
                                    >
                                        <m:Label
                                            width="auto"
                                            id="_IDGenLabel7"
                                            text="Technology"
                                        />
                                        <t:template>
                                            <m:Text
                                                width="auto"
                                                id="tyepid0"
                                                text="{portfolio>technology}"
                                                wrapping="false"
                                            />
                                        </t:template>
                                    </t:Column>

                                    <!-- end of Technology -->
                                </t:columns>
                            </t:TreeTable>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
